

<div class="container">
	<div class="row">
		<div class="col-lg-4" style="background-color: orange;">
			<h2>User info</h2>
		</div>

		<div class="col-lg-8">
			<h2>Books</h2>
			  <table>
			  	<tr>
			  		<th></th><th>Title</th><th>Opinion</th>
			  	</tr>
			  	<% @books.each do |book| %>
			  	<tr>
			  		<td><%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
			  		<td><%= link_to book_path(book.id) do %>
									<%= book.title %>
								<% end %></td>
			  		<td><%= book.body %></td>
			  	</tr>
			  	<% end %>
			  </table>
	  	</div>
	</div>
</div>
