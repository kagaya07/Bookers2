<div id="error">
	<% if @book.errors.any? %>
		<p><%= @book.errors.count %>error prohibited this obj from being saved: </p>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<% if flash[:notice] %>
	<div class="flash"><%= flash[:notice] %></div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-lg-4" style="background-color: orange;">
			<h2>Users info</h2>
			<div class="user">
				<%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
				<div class="name clearfix">
					<label>name</label>
					<p><%= @user.name %></p>
				</div>
				<div class="introduction clearfix">
					<label>introduction</label>
					<p><%= @user.introduction %></p>
				</div>
				<% if @user.id == current_user.id %>
					<%=link_to "編集", edit_user_path(@user) %>
				<% end %>
			</div>

			<div class="create">
				<h2>New Book</h2>
				<%= form_for(@book) do |f| %>

					<label>Title</label>
					<%= f.text_field :title %>

					<label>Opinion</label>
					<%= f.text_area :body %>

					<%= f.submit "Create Book" %>

				<% end %>
			</div>
		</div>

		<div class="col-lg-8">
			<h2>Books</h2>
			<table class="table table-striped">
			  	<tr>
			  		<th></th><th>Title</th><th>Opinion</th>
			  	</tr>
			  	<% @books.each do |book| %>
			  	<tr>
			  		<td><%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
			  		<td><%= link_to book_path(book.id) do %>
									<%= book.title %>
								<% end %></td>
			  		<td><%= book.body %></td>
			  	</tr>
			  	<% end %>
			</table>
		</div>
	</div>
</div>