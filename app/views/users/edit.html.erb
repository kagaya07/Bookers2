<div id="error">
	<% if @user.errors.any? %>
		<p><%= @user.errors.count %>error prohibited this obj from being saved: </p>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<h2>User info</h2>
<%= form_for(@user) do |f| %>
	<label>Name</label>
	<%= f.text_field :name %>

	<label>Image</label>
	<div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div>
    <%= f.attachment_field :profile_image, placeholder: "ファイルを選択", class: "user-edit-form" %>

	<label>Introduction</label>
	<%= f.text_area :introduction %>

	<%= f.submit "Update User" %>
<% end %>

